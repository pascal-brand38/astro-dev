import { Swiper, SwiperWrapper, SwiperSlide, SwiperButtonPrev, SwiperButtonNext, SwiperPagination } from "astro-swiper";
import './demo.css'
import DemoFirstSlide from "./DemoFirstSlide.astro";

const title='Hash Navigation'
---

<Swiper
  class="my-swiper"
  options={{
    spaceBetween: 30,
    hashNavigation: {
      watchState: true,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  }}
>
  <SwiperWrapper>
    <SwiperSlide data-hash="slide1"> <div class="my-slide"> <DemoFirstSlide title={title}/> </div> </SwiperSlide>
    <SwiperSlide data-hash="slide2"> <div class="my-slide"> <img src="/astro-dev/astro-swiper.png" alt="" /> </div> </SwiperSlide>
    <SwiperSlide data-hash="slide3"> <div class="my-slide"> Slide 3 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide4"> <div class="my-slide"> Slide 4 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide5"> <div class="my-slide"> Slide 5 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide6"> <div class="my-slide"> Slide 6 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide7"> <div class="my-slide"> Slide 7 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide8"> <div class="my-slide"> Slide 8 </div> </SwiperSlide>
    <SwiperSlide data-hash="slide9"> <div class="my-slide"> Slide 9 </div> </SwiperSlide>
  </SwiperWrapper>

  <SwiperButtonPrev />
  <SwiperButtonNext />
  <SwiperPagination />
</Swiper>
