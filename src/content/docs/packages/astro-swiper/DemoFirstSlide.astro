//
// utility to display the first slide of a given demo

interface Props {
  title: string,
}

const {
  title
} = Astro.props
const srcFile = 'Demo' + title.replaceAll(' ', '') + '.astro'
const astroDevUrl = 'https://github.com/pascal-brand38/astro-dev/blob/main/src/content/docs/packages/astro-swiper'
const swiperjsUrl = 'https://swiperjs.com/demos#' + title.toLowerCase().replaceAll(' ', '-')

---

<div class="first-slide">
  <a href=`${astroDevUrl}/${srcFile}` target="_blank" rel="noopener noreferrer">
    Full Astro Code
  </a>
  <div> <strong> {title} Demo </strong> </div>
  <div> Slide 1 </div>
  <a href=`${swiperjsUrl}` target="_blank" rel="noopener noreferrer">
    Demo using Vanilla js
  </a>
</div>

<style>
.first-slide {
}
a {
  display: block;
  text-decoration: none;
  color: unset;
  border: 1px solid black;
  border-radius: 5px;
  margin: 12px;
  padding: 6px 12px;
  background-color: gray;
}
a:hover {
  background-color: darkgrey;
}
</style>
