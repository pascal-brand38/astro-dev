import { LightGallery } from 'astro-lightgallery'
import {imgs} from './imgs'
import './style.css'

const reducedImgs = imgs.slice(0, 6)

---

<LightGallery
  class="mygallery-container"
  options={{
    thumbnail: true,
    }} >
  {
    reducedImgs.map(img => (
      <a class="mygallery-one-img" href={img.srcFull}>
          <img src={img.srcFull} />
      </a>
    ))
  }
</LightGallery>
