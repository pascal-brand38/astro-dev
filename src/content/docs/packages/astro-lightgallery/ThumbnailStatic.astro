import { LightGallery } from 'astro-lightgallery'
import {imgs} from './imgs'
import './style.css'

---

<LightGallery
  class="mygallery-container"
  options={{
    animateThumb: false,
    zoomFromOrigin: false,
    allowMediaOverlap: true,
    toggleThumb: true,
    }}
  >
  {
    imgs.map(img => (
      <a class="mygallery-one-img" href={img.srcFull}>
          <img src={img.srcFull} />
      </a>
    ))
  }
</LightGallery>
