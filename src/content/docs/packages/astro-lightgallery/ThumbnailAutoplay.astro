import { LightGallery } from 'astro-lightgallery'
import {imgs} from './imgs'
import './style.css'

---

<LightGallery
  class="mygallery-container"
  options={{
    thumbnail: true,
    autoplay: true,
    slideShowInterval: 500,
    }}
  addPlugins={[ 'zoom' ]}
  >
  {
    imgs.map(img => (
      <a class="mygallery-one-img" href={img.srcFull}>
          <img src={img.srcFull} />
      </a>
    ))
  }
</LightGallery>
