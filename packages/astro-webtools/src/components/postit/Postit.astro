import './webtools-postit.scss'

import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<"div"> {
  text: string,
  up?: string,
  rotate?: string,
  width?: string,
  color?: string,
}

const {
  class: className = '',
  style = '',
  title,
  text,
  up: webtoolsPostitUp = '0px',
  rotate: webtoolsPostitRotate = '4deg',
  width: webtoolsPostitWidth = '100%',
  color: webtoolsPostitColor = 'lightgoldenrodyellow',
  ...props
} = Astro.props;

---
<div
  style=`${style}`
  class={className + " webtools-postit"}
  {...props}>
    {text}
</div>

<style define:vars={{ webtoolsPostitUp, webtoolsPostitRotate, webtoolsPostitWidth, webtoolsPostitColor }}>
</style>
