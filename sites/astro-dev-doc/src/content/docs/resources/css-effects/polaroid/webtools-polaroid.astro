import './webtools-polaroid.scss'

import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<"div"> {
  img: string,
  text: string,
  up ?: string,
  rotate ?: string,
}

const {
  class: className = '',
  style = '',
  img,
  text,
  up: webtoolsPolaroidUp = '0px',
  rotate: webtoolsPolaroidRotate = '-5deg',
  ...props
} = Astro.props;


---
<div
  style=`${style}`
  class={className + " webtools-polaroid"}
  {...props}>
    <img src={img} alt="Polaroid"/>
    <div class="webtools-polaroid__text">
      {text}
    </div>
</div>

<style define:vars={{ webtoolsPolaroidUp, webtoolsPolaroidRotate }}>
</style>
