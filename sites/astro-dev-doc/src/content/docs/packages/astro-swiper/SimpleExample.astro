import Swiper from "./astro-swiper/Swiper.astro";
import SwiperWrapper from "./astro-swiper/SwiperWrapper.astro";
import type { AstroSwiperType } from "./astro-swiper/index";

const astroSwiperOptions: AstroSwiperType = {
  options: {
    autoplay: {
      delay: 500,
      disableOnInteraction: false,
      waitForTransition: false,
    },
    speed: 400,
    spaceBetween: 100,
    loop: true,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  },
};
---

<!-- Slider main container -->
<Swiper options={astroSwiperOptions.options}>
  <!-- Additional required wrapper -->
  <SwiperWrapper>
    <!-- Slides -->
    <div class="swiper-slide">
      <img src="https://picsum.photos/1024/512?nb=1" alt="" />
    </div>
    <div class="swiper-slide">
      <img src="https://picsum.photos/1024/512?nb=2" alt="" />
    </div>
    <div class="swiper-slide">
      <img src="https://picsum.photos/1024/512?nb=3" alt="" />
    </div>
    <div class="swiper-slide">
      Yopla
    </div>
  </SwiperWrapper>
  <!-- If we need pagination -->
  <div class="swiper-pagination"></div>

  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>

  <!-- If we need scrollbar -->
  <div class="swiper-scrollbar"></div>
</Swiper>
