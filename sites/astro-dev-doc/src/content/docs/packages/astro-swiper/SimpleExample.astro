import { Swiper, SwiperWrapper, SwiperSlide, SwiperButtonPrev, SwiperButtonNext, SwiperPagination, SwiperScrollbar } from "astro-swiper";
import type { AstroSwiperType } from "astro-swiper";

const astroSwiperOptions: AstroSwiperType = {
  options: {
    autoplay: {
      delay: 500,
      disableOnInteraction: false,
      waitForTransition: false,
    },
    speed: 400,
    spaceBetween: 100,
    loop: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  },
};
---

<!-- Slider main container -->
<Swiper options={astroSwiperOptions.options} class="not-content">
  <!-- Additional required wrapper -->
  <SwiperWrapper>
    <!-- Slides -->
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=1" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=2" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=3" alt="" />
    </SwiperSlide>
  </SwiperWrapper>

  <!-- If we need pagination -->
  <SwiperPagination />

  <!-- If we need navigation buttons -->
  <SwiperButtonPrev />
  <SwiperButtonNext> </SwiperButtonNext>

  <!-- If we need scrollbar -->
  <SwiperScrollbar/>
</Swiper>
