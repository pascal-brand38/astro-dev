import Swiper from "./astro-swiper/Swiper.astro";
import SwiperWrapper from "./astro-swiper/SwiperWrapper.astro";
import SwiperSlide from "./astro-swiper/SwiperSlide.astro";
import SwiperButtonPrev from "./astro-swiper/SwiperButtonPrev.astro";
import SwiperButtonNext from "./astro-swiper/SwiperButtonNext.astro";
import SwiperPagination from "./astro-swiper/SwiperPagination.astro";
import SwiperScrollbar from "./astro-swiper/SwiperScrollbar.astro";
import type { AstroSwiperType } from "./astro-swiper/index";

const astroSwiperOptions: AstroSwiperType = {
  options: {
    autoplay: {
      delay: 500,
      disableOnInteraction: false,
      waitForTransition: false,
    },
    speed: 400,
    spaceBetween: 100,
    loop: true,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  },
};
---

<!-- Slider main container -->
<Swiper options={astroSwiperOptions.options} class="not-content">
  <!-- Additional required wrapper -->
  <SwiperWrapper>
    <!-- Slides -->
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=1" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=2" alt="" />
    </SwiperSlide>
    <SwiperSlide>
      <img src="https://picsum.photos/1024/512?nb=3" alt="" />
    </SwiperSlide>
  </SwiperWrapper>

  <!-- If we need pagination -->
  <SwiperPagination />

  <!-- If we need navigation buttons -->
  <SwiperButtonPrev />
  <SwiperButtonNext> </SwiperButtonNext>

  <!-- If we need scrollbar -->
  <SwiperScrollbar/>
</Swiper>
