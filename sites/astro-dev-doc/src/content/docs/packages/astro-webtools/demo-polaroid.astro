import { Polaroid } from 'astro-webtools'

---

<div class="not-content demo-2cols demo-handwritting demo-font-xl">
  <div class="demo-col">  <!-- use this div as cells have the same size -->
    <Polaroid
      style="color: red;"
      img="https://picsum.photos/256/256?polaroid=1"
      text="Polaroid"
      rotate=`${16*Math.random()-8}deg`
      up=`${16*Math.random()-8}px`
    />
  </div>

  <div class="demo-col">
    <Polaroid
      style="color: blue;"
      img="https://picsum.photos/256/256?polaroid=2"
      text="Effect"
      rotate=`${16*Math.random()-8}deg`
      up=`${16*Math.random()-8}px`
    />
  </div>
</div>
