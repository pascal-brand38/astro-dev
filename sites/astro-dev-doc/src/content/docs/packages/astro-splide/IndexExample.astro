// Splide configuration  -  require npm install astro-splide
import "@splidejs/splide/css"
import { Splide, SplideTrack, SplideSlide } from 'astro-splide';

// Misc import for this demo
import "./style.css"
import { imgUrls } from './imgUrls'

---

<Splide class='not-content' hasTrack={ false }, options={{autoplay: true, type: 'loop',}}>

  <SplideTrack>
  {
    imgUrls.map(url => (
      <SplideSlide>
        <img src={url} alt=''/>
      </SplideSlide>
    ))
  }
      </SplideTrack>
      <div class="splide__progress">
        <div class="splide__progress__bar" />
      </div>

</Splide>
